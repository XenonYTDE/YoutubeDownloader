<Window
    x:Class="YoutubeDownloader.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar Area -->
        <TextBlock Text="YouTube Downloader" 
                 Style="{StaticResource TitleTextBlockStyle}"
                 Margin="20,20,20,10"/>

        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Center" 
                    Margin="0,20,20,10">
            <TextBlock Text="Version " 
                       Opacity="0.7"
                       Style="{StaticResource CaptionTextBlockStyle}"/>
            <TextBlock x:Name="VersionText" 
                       Text="1.0.6"
                       Opacity="0.7"
                       Style="{StaticResource CaptionTextBlockStyle}"/>
        </StackPanel>

        <!-- Main Content -->
        <TabView Grid.Row="1" x:Name="MainTabView">
            <TabView.TabItems>
                <!-- Download Tab -->
                <TabViewItem Header="Download" IsSelected="True">
                    <Grid Padding="20" MaxWidth="800">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- URL Input -->
                        <TextBox x:Name="UrlTextBox" 
                                PlaceholderText="Enter YouTube URL"
                                Grid.Row="0"
                                Margin="0,0,0,20"
                                TextChanged="UrlTextBox_TextChanged"/>

                        <!-- Thumbnail and Video Title -->
                        <Grid Grid.Row="1" Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Image x:Name="ThumbnailImage" 
                                   Height="180" 
                                   Stretch="Uniform"
                                   HorizontalAlignment="Left"
                                   Visibility="Collapsed"/>
                            <TextBlock x:Name="VideoTitleText"
                                       Grid.Column="1"
                                       Style="{StaticResource BodyTextBlockStyle}"
                                       TextWrapping="Wrap"
                                       Margin="12,0,0,0"
                                       VerticalAlignment="Center"
                                       MaxWidth="400"
                                       Visibility="Collapsed"/>
                        </Grid>

                        <!-- Download Location -->
                        <Grid Grid.Row="2" Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="LocationTextBox"
                                    IsReadOnly="True"
                                    PlaceholderText="Download Location"
                                    Margin="0,0,10,0"/>
                            <Button x:Name="BrowseButton"
                                    Grid.Column="1"
                                    Click="BrowseButton_Click">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8DA;"/>
                                    <TextBlock Text="Browse"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- Controls -->
                        <StackPanel Grid.Row="3" 
                                    Orientation="Horizontal" 
                                    Spacing="10"
                                    Margin="0,0,0,20">
                            <Button x:Name="DownloadMP4Button" 
                                    Click="DownloadMP4Button_Click"
                                    Style="{StaticResource AccentButtonStyle}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE714;"/>
                                    <TextBlock Text="Download MP4"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="DownloadMP3Button" 
                                    Click="DownloadMP3Button_Click">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8D6;"/>
                                    <TextBlock Text="Download MP3"/>
                                </StackPanel>
                            </Button>
                            <ComboBox x:Name="QualityComboBox" 
                                     PlaceholderText="Select Quality"
                                     MinWidth="150"/>
                        </StackPanel>

                        <!-- Progress Area -->
                        <Grid Grid.Row="4" 
                              Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                              BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                              BorderThickness="1"
                              CornerRadius="8"
                              Padding="16"
                              Margin="0,0,0,20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <ProgressBar x:Name="DownloadProgress" 
                                        Height="4"
                                        Margin="0,0,0,8"/>
                            
                            <TextBlock x:Name="StatusText"
                                      Grid.Row="1"
                                      TextWrapping="Wrap"
                                      Style="{StaticResource BodyTextBlockStyle}"
                                      Opacity="0.8"/>
                        </Grid>
                    </Grid>
                </TabViewItem>

                <!-- History Tab -->
                <TabViewItem Header="History">
                    <Grid Padding="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Add Clear All button -->
                        <Button Grid.Row="0" 
                                Click="ClearAllHistory_Click"
                                Margin="0,0,0,12"
                                HorizontalAlignment="Right">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon FontFamily="Segoe Fluent Icons" 
                                          Glyph="&#xE74D;"
                                          Foreground="Red"/>
                                <TextBlock Text="Clear All History"/>
                            </StackPanel>
                        </Button>

                        <!-- Existing ListView moved to Row 1 -->
                        <ListView x:Name="HistoryListView" Grid.Row="1">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="12" MinWidth="600">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <FontIcon Grid.Column="0" 
                                                 Margin="0,0,12,0"
                                                 FontFamily="Segoe Fluent Icons" 
                                                 Glyph="{Binding Type, Converter={StaticResource TypeToIconConverter}}"/>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Title}" 
                                                       Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                            <TextBlock Text="{Binding FilePath}" 
                                                       Style="{StaticResource CaptionTextBlockStyle}"
                                                       Opacity="0.8"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" 
                                                   Text="{Binding DateTime}"
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Opacity="0.8"
                                                   Margin="12,0"/>
                                        <Button Grid.Column="3" 
                                                Click="OpenFileLocation_Click"
                                                CommandParameter="{Binding FilePath}"
                                                Margin="0,0,8,0">
                                            <FontIcon FontFamily="Segoe Fluent Icons" 
                                                      Glyph="&#xE838;"/>
                                        </Button>
                                        <Button Grid.Column="4" 
                                                Click="DeleteHistoryItem_Click"
                                                CommandParameter="{Binding}">
                                            <FontIcon FontFamily="Segoe Fluent Icons" 
                                                      Glyph="&#xE74D;"
                                                      Foreground="Red"/>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </TabViewItem>
            </TabView.TabItems>
        </TabView>
    </Grid>
</Window> 